#!/usr/bin/env ruby
require_relative '../lib/readmeExtractor'
# transfer command-line utility
# Usage: transfer --from [source] --to [destination]

args = ARGV.each_slice(2).to_a.to_h  # Splits ARGV into a hash by pairs

from = args["--from"]
to = args["--to"]

if from && to
  ReadmeExtractor.new.perform(from, to)
else
  puts "Usage: transfer --from [source] --to [destination]"
end